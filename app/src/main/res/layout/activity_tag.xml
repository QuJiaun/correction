<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/layout_background"
    tools:context="com.luckyxmobile.correction.ui.activity.TagManagerActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_tag_toolbar"
        android:theme="@style/MyPopupMenu"
        app:title="@string/tags"
        style="@style/MyToolbar"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tag_layout_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent"
        zhy:max_select="-1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/all_tag"
        android:textSize="@dimen/text_body_size"
        android:textColor="@color/textDark"
        tools:ignore="RtlSymmetry" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/tag_layout_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        zhy:max_select="-1"/>

</LinearLayout>