<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:gravity="center"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

                <Button
                    android:id="@+id/doodle_paint_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="56dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:button="@null"
                    android:text="@string/correct"
                    android:textColor="@color/blue_right"
                    android:textSize="@dimen/print_button_text_size"
                    android:drawableTop="@drawable/ic_paint_right"
                    android:background="@color/transparent"
                    tools:ignore="ContentDescription"/>

                <Button
                    android:id="@+id/doodle_paint_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="56dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:button="@null"
                    android:text="@string/incorrect"
                    android:textColor="@color/gray_9c"
                    android:textSize="@dimen/print_button_text_size"
                    android:drawableTop="@drawable/ic_paint_unchecked"
                    android:background="@color/transparent"
                    tools:ignore="ContentDescription"/>


                <Button
                    android:id="@+id/doodle_paint_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="56dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:button="@null"
                    android:text="@string/key"
                    android:textColor="@color/gray_9c"
                    android:textSize="@dimen/print_button_text_size"
                    android:drawableTop="@drawable/ic_paint_unchecked"
                    android:background="@color/transparent"
                    tools:ignore="ContentDescription"/>

                <Button
                    android:id="@+id/doodle_paint_error_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="56dp"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:button="@null"
                    android:text="@string/cause"
                    android:textColor="@color/gray_9c"
                    android:textSize="@dimen/print_button_text_size"
                    android:drawableTop="@drawable/ic_paint_unchecked"
                    android:background="@color/transparent"
                    tools:ignore="ContentDescription"/>

        </LinearLayout>

</HorizontalScrollView>